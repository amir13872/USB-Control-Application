<Window x:Class="USBControlApp.Views.PasswordPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Prompt" Height="200" Width="300">
    <Grid>
        <Label Content="Enter Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="260" 
                 PasswordChar="*"/>
        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Width="75" 
                Click="SubmitButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,10,0" Width="75" 
                Click="CancelButton_Click"/>
        <TextBlock x:Name="MessageTextBlock" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" 
                   Foreground="Red"/>
    </Grid>
</Window>