<Window x:Class="USBControlApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="USB Control App" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontSize="24" FontWeight="Bold" Text="USB Control Application" Margin="0,0,0,20"/>
            <Button Name="ChangePasswordButton" Content="Change Password" Width="200" Height="40" Margin="0,0,0,10" Click="ChangePasswordButton_Click"/>
            <Button Name="ManageWhitelistButton" Content="Manage Whitelist" Width="200" Height="40" Click="ManageWhitelistButton_Click"/>
            <TextBlock Name="StatusTextBlock" FontSize="14" Foreground="Red" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>